{
  "manifest_version": 3,
  "name": "Scratch拡散ツール",
  "version": "1.0",
  "description": "Scratchのプロジェクトを複数スタジオに拡散するツール",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.jpeg",
      "48": "icon.jpeg",
      "128": "icon.jpeg"
    }
  },
  "host_permissions": [
    "https://scratch.mit.edu/*",
    "https://api.scratch.mit.edu/*"
  ]
}
